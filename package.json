    "node-dev": "^3.1.3",
    "nodemon": "^1.11.0",
    "rx-http-request": "^1.2.0",
    "rxjs": "^5.1.0",
    "ts-node": "^2.1.0",
    "tslint": "^4.4.2",
    "typescript": "^2.1.6",
    "typings": "^2.1.0"
  },
  "repository": {
    "type": "git",
