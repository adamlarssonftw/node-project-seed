{
  "name": "node-project-seed",
  "version": "1.0.0",
  "description": "Basic setup for node projects using ts with tslint and rxjs.",
  "main": "./dest/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "tsc ./src/main.ts && node ./src/main.js",
